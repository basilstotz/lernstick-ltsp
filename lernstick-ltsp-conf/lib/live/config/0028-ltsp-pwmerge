#!/bin/sh

#set -e

Config (){
    CONFIG="/home/.config"
    if test -f $CONFIG/login/passwd; then
	TMP1=$(mktemp -d)
	TMP2=$(mktemp -d)
	
	if /usr/local/sbin/pwfilter /etc $TMP1; then
	    /usr/local/sbin/pwmerge $CONFIG/login $TMP1 $TMP2
	    cp -a $TMP2/* /etc
	    
	    #prevent running these ...
	    #touch /var/lib/live/config/live-debconfig_passwd
	    touch /var/lib/live/config/user-setup
	    #touch /var/lib/live/config/sudo
	else
	    echo "error: something went wrong"
	fi
      
	rm -r $TMP1
	rm -r $TMP2
    fi
}

Config
